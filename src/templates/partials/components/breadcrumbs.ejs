<div class="<%= typeof css_class !== 'undefined' ? css_class : '' %>">
    <h3 class="text-gray-600 text-sm">
      <% menu.split("/").forEach( function(i){ %>
        <% if (i == active_menu){ %>
          <%= i %> 
        <% }else{ %>
          <a href="" class="text-green-600">
            <% if (i == "Home"){ %>
              <i class="bx bx-home mr-1"></i>
            <% } %>
            <%= i %> </a> /  
        <% } %>
      <% }) %>
    </h3>
  <% if (typeof title !== 'undefined') { %>
    <div>
      <h1 class="text-2xl mt-1 font-medium"><%= title %></h1>
    </div>
  <% } %>
</div>
